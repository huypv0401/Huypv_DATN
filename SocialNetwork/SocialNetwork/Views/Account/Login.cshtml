@model SocialNetwork.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}
<link href="/Content/CustomStyles.css" rel="stylesheet" type="text/css" />
<h2 style="margin:70px auto 0">Đăng nhập</h2>
<section id="loginForm">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Use a local account to log in.</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.userName, new { @class = "col-md-3 control-label", style = "text-align: left;" })
            <div class="col-md-7">
                @Html.TextBoxFor(m => m.userName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.userName)
            </div>
        </div>
        <br />
        <div class="form-group">
            @Html.LabelFor(m => m.password, new { @class = "col-md-3 control-label", style = "text-align: left" })
            <div class="col-md-7">
                @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.password)
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-3 col-md-7">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-3 col-md-7">
                <input type="submit" value="Đăng nhập" class="btn btn-primary" />
            </div>
        </div>
        <br />
        <p>
            @Html.ActionLink("Đăng ký", "Register", "Account") nếu bạn không có tài khoản.
        </p>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}