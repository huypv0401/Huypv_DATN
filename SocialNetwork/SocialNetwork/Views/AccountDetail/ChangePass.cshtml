@model SocialNetwork.Models.ViewModel.ChangePassViewModel
@{
    ViewBag.Title = "ChangePass";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

    @using (Html.BeginForm("ChangePass", "AccountDetail", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h2 style="margin-top:70px">ChangePass</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m._password, new { @class = "col-md-4 control-label", style = "text-align: left;" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m._password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model._password, "", new { @class = "text-warning" })
                </div>
            </div>
            <br />

            <div class="form-group">
                @Html.LabelFor(m => m.password, new { @class = "col-md-4 control-label", style = "text-align: left;" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-warning" })
                </div>
            </div>
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label", style = "text-align: left;" })
                <div class="col-md-8">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-warning" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Thay đổi" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }




